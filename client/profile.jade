extends layout.jade
block content
  #fh5co-main
    .container
      // Button trigger modal
      button.btn.btn-primary.btn-lg(type='button', data-toggle='modal', data-target='#myModal')
        | Upload New Comic
      // Modal
      #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
        .modal-dialog(role='document')
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-label='Close')
                span(aria-hidden='true') Ã—
              h4#myModalLabel.modal-title Upload New Comic
            .modal-body
              form
                .form-group
                  label(for='titleFile') Title
                  input#titleFile.form-control(type='text', placeholder='Title')
                .form-group
                  label(for='descFile') Description
                  input#descFile.form-control(type='text', placeholder='Description')
                .form-group
                  label(for='Cover') Cover
                  input#Cover(type='file')
                  p.help-block Comic book Cover
                .form-group
                  label(for='File') File
                  input#File(type='file')
                  p.help-block Comic book file
                button.btn.btn-default(type='submit') Submit
            .modal-footer
              button.btn.btn-default(type='button' data-dismiss='modal') Close
              button.btn.btn-primary(type='button') Save changes

      .row
